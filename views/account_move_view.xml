<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_move_form" model="ir.ui.view">
    <field name="name">agent_management.account.move_form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <field name="invoice_user_id" position="attributes">
        <attribute name="domain">[('|'),('partner_id.is_agent', '=', True),('share', '=', False)]</attribute>
      </field>
      <field name="team_id" position="after">
        <field name="commissioned" invisible="1"/>
        <field
          name="agent_id"
          readonly="state not in ['draft', 'cancelled']"
          invisible="state in ['done'] and not agent_id"/>
        <field name="has_agent_commission" invisible="1"/>
        <field
          name="agent_commission"
          widget="percentage"
          readonly="commissioned"
          invisible="not agent_id"/>
      </field>

      <xpath
        expr="//field[@name='invoice_line_ids']/list/field[@name='price_subtotal']"
        position="before">
        <field name="can_toggle_commissionable" column_invisible="True"/>
        <field name="agent_commission" column_invisible="True"/>
        <field
          name="commissionable"
          column_invisible="not parent.agent_id"
          readonly="not can_toggle_commissionable"/>
      </xpath>

      <xpath expr="//field[hasclass('oe_subtotal_footer_separator')]" position="after">
        <field name="agent_currency_id" invisible="1"/>
        <field name="commissioned" invisible="1"/>
        <field name="amount_commission_base" invisible="not agent_id"/>
        <field name="amount_commission" invisible="not agent_id or commissioned"/>
        <field name="approved_commission" invisible="not agent_id or not commissioned"/>
        <field name="commission_date" string="Approved on" invisible="not agent_id or not commissioned"/>
      </xpath>
    </field>
  </record>
</odoo>
