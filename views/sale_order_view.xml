<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_order_agent_commission_form" model="ir.ui.view">
    <field name="name">agent_management.sale.view_order_form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <field name="payment_term_id" position="after">
        <field
          name="agent_id"
          readonly="state not in ['draft', 'cancelled']"
          invisible="state in ['done'] and not agent_id"/>
        <field name="has_agent_commission" invisible="1"/>
        <field
          name="agent_commission"
          widget="percentage"
          readonly="state not in ['draft', 'cancelled']"
          invisible="not agent_id"/>
      </field>

      <xpath
        expr="//field[@name='order_line']/list/field[@name='price_subtotal']"
        position="before">
        <field name="can_toggle_commissionable" column_invisible="True"/>
        <field name="agent_commission" column_invisible="True"/>
        <field
          name="commissionable"
          column_invisible="not parent.agent_id"
          readonly="not can_toggle_commissionable"/>
      </xpath>

      <xpath
        expr="//field[@name='order_line']/form//field[@name='analytic_distribution']/.."
        position="after">
        <field name="can_toggle_commissionable" invisible="1"/>
        <label for="commissionable" invisible="not parent.agent_id"/>
        <div>
          <field
            name="commissionable"
            invisible="not parent.agent_id"
            readonly="not can_toggle_commissionable"/>
        </div>
      </xpath>

      <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="inside">
        <field name="amount_commission_base" invisible="not agent_id"/>
        <field name="amount_commission" invisible="not agent_id"/>
      </xpath>
    </field>
  </record>

  <record id="view_order_tree_with_commissions" model="ir.ui.view">
    <field name="name">agent_management.sale.order.tree</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_tree"/>
    <field name="arch" type="xml">
      <field name="amount_total" position="after">
        <field name="amount_commission_base"/>
        <field name="amount_commission"/>
      </field>
    </field>
  </record>
</odoo>
